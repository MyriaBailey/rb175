<form method="post" action="/users/signin">
  <div>
    <label for="username">Username:
      <input name="username" type="text" value="<%= @username %>">
    </label>
  </div>
  <div>
    <label for="password">Password:
      <input name="password" type="text">
    </label>
  </div>
  <button type="submit">Sign In</button>
</form>