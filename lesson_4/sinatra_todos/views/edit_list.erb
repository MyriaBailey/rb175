<section id="todos">
  <header>
    <h2>Editing '<%= @list[:name] %>'</h2>
      <ul>
        <li>
          <form class="delete" action="/lists/<%= params[:id] %>/delete" method="post">
            <button type="submit" class="delete">Delete List</button>
          </form>
        </li>
      </ul>
  </header>  
</section>

<form action="/lists/<%= params[:id] %>" method="post">
  <d1>
    <dt>
      <label for="new_name">Enter the new name for the list:</label>
    </dt>
    <dd>
      <input name="new_name" placeholder="New Name" type="text"
        value="<%= params[:new_name] || @list[:name] %>">
    </dd>
  </d1>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= params[:id] %>">Cancel</a>
  </fieldset>
</form>
